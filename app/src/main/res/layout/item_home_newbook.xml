<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="4dp"
    android:orientation="vertical">

   <com.loopeer.shadow.ShadowView
        android:id="@+id/shadow_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:shadowMargin="10dp"
        app:shadowRadius="15dp"
        android:foreground="?attr/selectableItemBackground"
        app:cornerRadius="7dp">

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="95dp"
            android:background="@drawable/white_rectangle"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="12dp">

            <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
                android:id="@+id/book_image"
                android:layout_width="70dp"
                android:layout_height="95dp"
                android:scaleType="fitXY"
                app:siShape="@drawable/shape_rounded_book"
                android:src="@drawable/default_image_not_available"
                android:contentDescription="TODO" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="15.5dp">

                    <com.maktabat.al.huda.customfonts.MyTextView_Ubuntu_Bold
                        android:id="@+id/book_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textAllCaps="true"
                        android:textColor="@color/recyclerview_title_color"
                        android:textSize="13sp" />

                    <com.maktabat.al.huda.customfonts.MyTextView_Ubuntu_Italic
                        android:id="@+id/book_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:textSize="10sp"
                        android:maxLines="1"
                        android:layout_below="@+id/book_name"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/grey"
                        android:text="" />

                <com.maktabat.al.huda.customfonts.MyTextView_Ubuntu_Medium
                    android:layout_width="67dp"
                    android:layout_height="26dp"
                    android:background="@drawable/round_corner"
                    android:textSize="12.5sp"
                    android:gravity="center"
                    android:text="Detalhes"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingStart="2dp"
                    android:layout_marginEnd="14.3dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:textColor="#FFFFFF" />


            </RelativeLayout>



        </LinearLayout>


    </com.loopeer.shadow.ShadowView>


</LinearLayout>